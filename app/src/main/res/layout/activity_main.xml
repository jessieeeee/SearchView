<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="searchview.jessie.com.searchview.MainActivity">

    <!--搜索框-->
    <searchview.jessie.com.searchview.SearchView
        android:id="@+id/sc_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <ImageView
        android:id="@+id/img_content_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_below="@+id/sc_content"
        android:background="@color/default_line"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />


    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
